<div
  class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-300 rounded-lg shadow-xl"
>

  <h1 class="text-3x1 m-16 font-bold text-center">Registro</h1>
  <form action="" method="post" class="mt-4">

    <input
      type="text"
      name="name"
      id=""
      placeholder="Nombre"
      class="shadow-xl border border-gray-300 w-full text-lg placeholder-gray-500 my-2 focus:bg-white p-2"required
    />

    <input
      type="email"
      name="email"
      placeholder="Email"
      class="shadow-xl border border-gray-300 w-full text-lg placeholder-gray-500 my-2 focus:bg-white p-2"required
    />

    <input
      type="text"
      name="passwaord"
      placeholder="Contrasena"
      class="shadow-xl border border-gray-300 w-full text-lg placeholder-gray-500 my-2 focus:bg-white p-2" required
    />

    <button
      class="bg-blue-500 hover:bg-blue-400 text-white w-full font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded"
    >
      Registrar
    </button>
     {{#if error}}

<p>{{error}}</p>


     {{/if}}


  </form>

</div>